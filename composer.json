{
    "name": "vexo/weave",
    "description": "A library to implement AI agents and LLMs into your application",
    "keywords": [
        "ai", "llm", "openai", "gpt", "gpt-3", "gpt-4", "agent"
    ],
    "type": "library",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "php-http/discovery": true
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Vexo\\": "src/"
        }
    },
    "require": {
        "php": "^8.1",
        "beberlei/assert": "^3.3",
        "google/apiclient": "^2.13",
        "justinrainbow/json-schema": "^5.2",
        "league/event": "^3.0",
        "openai-php/client": "^0.4.2",
        "psr/http-client": "^1.0",
        "psr/http-factory": "^1.0",
        "psr/log": "^3.0",
        "psr/simple-cache": "^3.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.16",
        "monolog/monolog": "^3.3",
        "phpstan/phpstan": "^1.10",
        "phpunit/php-code-coverage": "^10.1",
        "phpunit/phpunit": "^10.1",
        "psr-mock/http-client-implementation": "^1.0",
        "psr-mock/http-factory-implementation": "^1.0",
        "symfony/monolog-bridge": "^6.2"
    },
    "scripts": {
        "pre-autoload-dump": "Google\\Task\\Composer::cleanup",
        "test": ["@phpunit", "@phpstan", "@php-cs-fixer"],
        "phpunit": "vendor/bin/phpunit --coverage-html tmp/coverage --coverage-text",
        "phpstan": "vendor/bin/phpstan analyse",
        "php-cs-fixer": "vendor/bin/php-cs-fixer fix --cache-file=tmp/.php-cs-fixer.cache --diff --dry-run"
    },
    "extra": {
        "google/apiclient-services": [
            "CustomSearchAPI"
        ]
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Frank van den Brink",
            "email": "frank@pragmatist.nl"
        }
    ]
}
