{
    "name": "vexo/weave",
    "description": "A library to implement AI agents and LLMs into your application",
    "keywords": [
        "ai", "llm", "openai", "gpt", "gpt-3", "gpt-4", "agent"
    ],
    "type": "library",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "autoload": {
        "psr-4": {
            "Vexo\\Weave\\": "src/"
        }
    },
    "require": {
        "php": "^8.1",
        "openai-php/client": "^0.4.2",
        "beberlei/assert": "^3.3",
        "mustache/mustache": "^2.14",
        "psr/log": "^3.0",
        "symfony/http-client": "^6.2",
        "nyholm/psr7": "^1.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.1",
        "phpunit/php-code-coverage": "^10.1"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Frank van den Brink",
            "email": "frank@pragmatist.nl"
        }
    ]
}
